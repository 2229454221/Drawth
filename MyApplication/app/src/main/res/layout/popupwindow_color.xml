<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#BFBFBF">

    <ImageView
        android:id="@+id/iv_color_range"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/color_range"/>
    <ImageView
        android:id="@+id/iv_color_picker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/color_picker"
        android:clickable="true"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/ll_wb"
        android:orientation="horizontal"
        android:layout_below="@id/iv_color_range">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tv_black"
            android:background="@drawable/edittext_black_selector" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tv_white"
            android:background="@drawable/edittext_white_selector" />
    </LinearLayout>
</RelativeLayout>
